---
import BmiCalculator from "../layouts/components/BmiCalculator";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("pages", "bmi");
const { Content } = await entry.render();
const { title, description, meta_title, image } = entry.data;
---
<Base title={title} meta_title={meta_title} description={description}>
    <div class="container" id="formContainer">
        <h1 set:html={markdownify(title)} class="h2 page-heading mt-20" />
        
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <main>
        <BmiCalculator client:load />
    </main>
</body>
</html>
<div class="container content mt-20">
    <Content />
</div>
</Base>
